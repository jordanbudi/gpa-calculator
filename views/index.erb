          <div class="input-field col l2 offset-l1 s6 m4 offset-m2"> 
            <input id="period_3" type="text" name="period3" placeholder="Enter Grade ex: A, 4.0, 100%">
            <label class="active" for="period_3">Period 3:</label>
          </div>
          <div class="input-field col l3 s6 m4"> 
            <select name ="p3type">
              <option value="0">Regular</option>
              <option value="1">Honors</option>
              <option value="1">Advanced Placement</option>
              <option value="0">Dual Enrollment</option>
            </select>
            <label>Class Type:</label>
          </div>
        
        <!-- PERIOD 4, in a row then to columns-->
         <div class="input-field col l2 s6 m4 offset-m2">
            <input id="period_4" type="text" name="period4" placeholder="Enter Grade ex: A, 4.0, 100%">
            <label class="active" for="period_4">Period 4:</label>
          </div>

          <div class="input-field col l3 s6 m4">
            <select name ="p4type">
              <option value="0">Regular</option>
              <option value="1">Honors</option>
              <option value="1">Advanced Placement</option>
              <option value="0">Dual Enrollment</option>
            </select>
            <label>Class Type:</label>
          </div>
        </div>

<!-- ROW THREE @@ ROW THREE @@  ROW THREE @@ ROW THREE @@ ROW THREE @@ ROW THREE @@-->        
        
        <!-- PERIOD 5, in a row then to columns-->
        <div class="row">
          <div class="input-field col l2 offset-l1 s6 m4 offset-m2">
            <input id="period_5" type="text" name="period5" placeholder="Enter Grade ex: A, 4.0, 100%">
            <label class="active" for="period_5">Period 5:</label>
          </div>

          <div class="input-field col l3 s6 m4">
            <select name ="p5type">
              <option value="0">Regular</option>
              <option value="1">Honors</option>
              <option value="1">Advanced Placement</option>
              <option value="0">Dual Enrollment</option>
            </select>
            <label>Class Type:</label>
          </div>
        
        <!-- PERIOD 6, in a row then to columns-->
          <div class="input-field col l2 s6 m4 offset-m2">
            <input id="period_6" type="text" name="period6" placeholder="Enter Grade ex: A, 4.0, 100%">
            <label class="active" for="period_6">Period 6:</label>
          </div>

          <div class="input-field col l3 s6 m4">
            <select name ="p6type">
              <option value="0">Regular</option>
              <option value="1">Honors</option>
              <option value="1">Advanced Placement</option>
              <option value="0">Dual Enrollment</option>
            </select>
            <label>Class Type:</label>
          </div>
        </div>
        
<!-- ROW TWO @@ ROW TWO @@  ROW TWO @@ ROW TWO @@ ROW TWO @@ ROW TWO @@-->
        
        <!-- PERIOD 7, in a row then to columns-->
        <div class="row center-align">            
          <div class="input-field col l2 offset-l1 s6 m4 offset-m2">
            <input id="period_7" type="text" name="period7" placeholder="Enter Grade ex: A, 4.0, 100%">
            <label class="active" for="period_7">Period 7:</label>
          </div>

          <div class="input-field col l3 s6 m4">
            <select name ="p7type">
              <option value="0">Regular</option>
