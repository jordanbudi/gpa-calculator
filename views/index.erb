          </div>

        <!-- PERIOD 8, in a row then to columns-->
          <div class="input-field col l2 s6 m4 offset-m2">
            <input id="period_8" type="text" name="period8" placeholder="Enter Grade ex: A, 4.0, 100%">
            <label class="active" for="period_8">Period 8:</label>
          </div>

          <div class="input-field col l3 s6 m4">
            <select name ="p8type">
              <option value="0">Regular</option>
              <option value="1">Honors</option>
              <option value="1">Advanced Placement</option>
              <option value="0">Dual Enrollment</option>
            </select>
            <label>Class Type:</label>
          </div>
        </div>
        
        <div class="row center-align">
        <button class="btn waves-effect waves-light" type="submit" name="action">Calculate
          <i class="material-icons right">input</i>
        </button>
        </div>
        
      </form>
    </div>
    
    
    <script>
      $(document).ready(function() {
      $('select').material_select();
      });
    </script>
  </body>
</html>